<div class="container">
  <div id="main-logo" class="shoes-front">
    <%= image_tag "logook.png", class: "img-center"  %>
  </div>
</div>


<div class="text-center">
  <h3><%= @brand.name %></h3>
  <%= link_to brands_path do %>
    <i class="fa fa-arrow-left"></i> Retour
  <% end %>
</div>


<div class="container">
  <div id="wrapper">
    <% @shoes.each do |shoes_column|%>
      <div class="col-xs-4">
        <% shoes_column.each do |shoe| %>
          <%= link_to shoe_results_path(shoe) do %>
            <div class='p20'>
              <div class="pin">
                <i class="fa fa-sort-asc fa-3x"></i>
                  <%= image_tag shoe.picture(:original), class: "img-responsive" %>
                    <div class="pin-title">
                      <h2><%= shoe.name %></h2>
                    </div>
                    <div class="pin-content">
                    <p>
                      <%= shoe.description %>
                    </p>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>