<div class="container">
  <div class="col-xs-6">
    <div id="main-logo">
      <%= image_tag "logook.png", class: "img-center"  %>
    <h1>Sneakr</h1>
    </div>
  </div>
</div>

<div class="form">
  <div class="col-xs-6">
    <div class="input-group">
      <span class="input-group-btn">
        <button class="btn btn-default" type="button">Go!</button>
      </span>
      <input type="text" class="form-control" placeholder="Search for...">
    </div><!-- /input-group -->
  </div><!-- /.col-lg-6 -->
</div>


<div class="social">
  <ul class="list-inline">
    <li><a href="#"><i class="fa fa-lg fa-facebook"></i></a>
    </li>
    <li><a href="#"><i class="fa fa-lg fa-twitter"></i></a>
    </li>
    <li><a href="#"><i class="fa fa-lg fa-instagram"></i></a>
    </li>
  </ul>
</div>

<div class="text-center">
  <h3><%= @brand.name %></h3>
  <%= link_to brands_path do %>
    <i class="fa fa-arrow-left"></i> Back
  <% end %>
</div>


<div class="container">
  <div id="wrapper">
    <% @shoes.each do |shoes_column|%>
      <div class="col-xs-4">
        <% shoes_column.each do |shoe| %>
          <div class='p20'>
            <div class="pin">
              <%= image_tag shoe.picture(:original), class: "img-responsive" %>
              <h2><%= shoe.name %></h2>
              <p>
                <%= shoe.description %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>