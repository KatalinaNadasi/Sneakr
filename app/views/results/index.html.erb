<div class="container" id="results">
  <div class="row">

<div class="col-xs-12 col-sm-4">
<%= form_tag("", method: "get", class: "form-horizontal") do %>
    <div class="form-group">
        <label class="col-sm-2 control-label">Brand</label>
        <div class="col-sm-10">
          <p class="form-control-static"><%= @shoe.brand.name %></p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Shoe</label>
        <div class="col-sm-10">
          <p class="form-control-static"><%= @shoe.name %></p>
        </div>

    </div>

    <%= label_tag(:size, "Pointure") %>
    <%= select_tag(:size, options_for_select(35..46)) %>

    <%= label_tag(:amount, "Price") %>
    <%= number_field_tag(:amount, nil, in: 20.0..120.0, step: 1) %>

    <%= submit_tag("Search") %>
<% end %>
</div>


    <div class="col-xs-12 col-sm-8">

      <!-- results list -->
      <% @results.each do |result| %>
        <div class="result">
          <div class="row">
            <div class="col-xs-2">
              <div class="result-img" style="background-image:url(<%= asset_path result.picture_url%>)">
              </div>
            </div>
            <div class="col-xs-8">
              <div class="result-body">
                <h2><%= result.title %></h2>
              </div>
            </div>
            <div class="col-xs-2">
              <div class="result-infos">
                <ul class="list-unstyled">
                  <li class="price"><%= result.price %>â‚¬</li>
                  <li>Pointure : <%= result.size.presence || 'n/a' %></li>
                  <li class="store"><%= result.store.name %></li>
                  <li><%= link_to "Acheter", result.url , class: "btn btn-warning"%></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
       <% end %>

    </div>

  </div>
</div>