<div class="container">
  <div id="main-logo">
    <%= image_tag "logo.png", class: "img-center"  %>
  <h1>Sneakr</h1>
  </div>
</div>

<div class="container">
  <%@brands.each do |brand|%>
    <div class="row">
      <div class="col-xs-4">
        <%= image_tag brand.photo_url, class: "img-rounded img-responsive" %>
      </div>
      <div class="col-xs-8">
      <h2><%= brand.name %></h2>
      <%= link_to "toutes les sneakers de #{brand.name}", brand_shoes_path(brand) %>

<div class="subtitle">
  <p> Trouvez toutes les sneakers motherfuck </p>
</div>
  <div class="social">
    <ul class="list-inline">
      <li><a href="#"><i class="fa fa-lg fa-facebook"></i></a>
      </li>
      <li><a href="#"><i class="fa fa-lg fa-twitter"></i></a>
      </li>
      <li><a href="#"><i class="fa fa-lg fa-instagram"></i></a>
      </li>
    </ul>
  </div>
</div>

<div id="brands">
