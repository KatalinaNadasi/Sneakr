<div class="container">
  <div id="main-logo">
    <%= image_tag "logook.png"  %>
  </div>
</div>

<h1>Sneakr</h1>
<div class="subtitle">
  <p> Le meilleur des sneakers </p>
</div>


  <div class="social">
    <ul class="list-inline">
      <li><a href="https://www.facebook.com" target="_blank"><i class="fa fa-lg fa-facebook"></i></a>
      </li>
      <li><a href="https://www.twitter.com" target="_blank"><i class="fa fa-lg fa-twitter"></i></a>
      </li>
      <li><a href="https://instagram.com/" target="_blank"><i class="fa fa-lg fa-instagram"></i></a>
      </li>
    </ul>
  </div>
</div>

<div id="brands">
  <div class="row">
    <% @brands.each do |brand| %>
      <div class="col-xs-3">
        <div class="brand-card">
          <%= image_tag brand.photo_url, class: "img-rounded img-responsive" %>
          <%= link_to "", brand_shoes_path(brand) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
</div>

